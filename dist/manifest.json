{
    "manifest_version": 3,
    "name": "EasyPaste",
    "version": "1.0",
    "description": "A simple clipboard manager for frequently used text snippets.",
    "permissions": ["storage", "clipboardWrite"],
    "action": {
      "default_popup": "index.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  